{% extends './layouts/layout.njk' %}

{% block content %}

<main>
  <div class="container py-4">
    <div class="p-5 mb-4 bg-warning rounded-3">
      <div class="container-fluid py-5">
        <h1 class="display-5 fw-bold">{{post.title}}</h1>
        <p class="col-md-8 fs-4">{{post.contents}}</p>
        <p class="col-md-8 fs-4">~ {{post.date}} 까지</p>
        <p class="h3 col-md-8 fs-4">작성자: {{post.writerName}}님</p>
      </div>
    </div>
    {% for i in comment %}
    <div class="list-group w-auto">
      <div class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
        <img src="{{user.imgSrc}}" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
        <div class="d-flex gap-2 w-100 justify-content-between">
          <div>
            <h6 class="mb-0">{{i.commentWriter}}</h6>
            <p class="mb-0 opacity-75">{{i.commentContent}}</p>
          </div>
          <small class="opacity-50 text-nowrap">{{i.time}}</small>
        </div>
        <form action="/page/comment/{{post.title}}/{{post.postNumber}}/{{post.writer}}/{{i._id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-outline-secondary">삭제</button>
        </form>
      </div>
    </div>
    {% endfor %}
    <div class="card mb-2">
      <div class="card-header bg-light">
              <i class="fa fa-comment fa"></i> 댓글
      </div>
      <div class="card-body">
        <form action="/page/comment/{{post.title}}/{{post.postNumber}}/{{post.writer}}" method="POST">
            <ul class="list-group list-group-flush">
              <li class="list-group-item">
              <textarea name="comment" class="form-control" rows="3"></textarea>
              <button id="register" type="submit" class="btn btn-dark mt-3 float-end">등록</button>
              </li>
            </ul>
        </form>    
      </div>
    </div>
  </div>
</main>

{% endblock %}



